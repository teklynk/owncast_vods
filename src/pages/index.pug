extends ../layout/default.pug

block content
    .container
        .row#vod-player.text-center
            h1#vod-title
            .ratio.ratio-16x9
                video#vod-video.w-100.h-auto.shadow(
                    muted
                    controls
                    playsinline
                    preload="metadata"
                )
        
        .mt-4.text-center
            a.btn.btn-link#vod-download Download
        
        .row.mt-4.text-center 
            each video in videos
                .col-lg-2.col-md-4.col-sm-6
                    a(href=`./index.html?v=${video.split('.mp4')[0]}`, target="_self")
                        img.img-thumbnail.shadow.w-100.h-auto(src=`./thumbnails/${video.split('.mp4')[0]}_thumbnail.png`, alt=`Thumbnail for ${video.split('.mp4')[0]}`, data-id=`${video.split('.mp4')[0]}`)
                    p.mt-2= video.split('.mp4')[0]

        .mt-4.text-center 
            a.btn.btn-link(href='./index.html', target='_blank') Open in a new window